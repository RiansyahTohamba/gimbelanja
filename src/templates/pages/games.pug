extends /layouts/_pages

block vars
  -
    page = {
      title: 'Games',
      breadcrumbs: {
        
      }
    }

block pages
  div.uk-card.uk-card-default.tm-ignore-container

    section.uk-card-body(id="A")
      div(uk-grid)
        div(class="uk-width-1-1 uk-width-expand@m")
          ul(class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-child-width-1-5@m"
             uk-grid)
            each game in games
              li
                a(class="uk-link-muted " +
                        "uk-text-center " +
                        "uk-display-block " +
                        "uk-padding-small " +
                        "uk-box-shadow-hover-large"
                  href="#")
                  if game.image
                    div.tm-ratio.tm-ratio-4-3
                        a(class="uk-link-muted " +
                                "uk-text-center " +
                                "uk-display-block " +
                                "uk-padding-small " +
                                "uk-box-shadow-hover-large " +
                                "tm-media-box"
                          href=game.href
                          title= game.name)
                          figure.tm-media-box-wrap
                            img(src= game.image alt= game.name)
                    div.uk-margin-small-top.uk-text-truncate= game.name      
